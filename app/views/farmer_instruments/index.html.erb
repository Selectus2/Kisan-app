<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
<body>
<div class="container">
	<h1 text-align: center;> Instruments for rent</h1>
	<br>
	<button class="btn btn-outline-primary"><%=	 link_to 'Post new advertisement',new_farmer_instrument_path %></button>
	<br>
	<br>
	<table class="container">
		<tr>
			<th>Instrument</th>
			<th>Owner</th>
			<th>Deposit</th>
			<th>Rent Per Hour</th>
			<th>View Details</th>
			<th>Edit Details</th>
			<th>Delete Details</th>
		</tr>
		<tbody>

		<% @ads.where.not("farmer_id=? or is_available=?","#{current_farmer.id}","#{false}").each do |ad| %>
			<tr>
				<td><%= ad.instrument.name %></td>
				<td><%= ad.farmer.full_name %></td>
				<td><%= ad.deposit %></td>
				<td><%= ad.rent_per_hour %></td>
				<td><%=	 link_to 'View',farmer_instrument_path(ad.id) %></td>
				<td><%=	 link_to 'Edit',edit_farmer_instrument_path(ad.id) %></td>
				<td><%= link_to 'Delete Advertisement', farmer_instrument_path(ad.id),method: :delete,data: { confirm: 'Are You sure?' } %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
</body>
</html>
